{
  "name": "my-new-nodejs-app",
  "version": "1.0.0",
  "description": "A full-stack Todo application with PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "set NODE_ENV=test&& jest --detectOpenHandles --forceExit",
    "test:watch": "set NODE_ENV=test&& jest --watch",
    "test:coverage": "set NODE_ENV=test&& jest --coverage"
  },
  "keywords": [
    "todo",
    "postgresql",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": ["dotenv/config"],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
